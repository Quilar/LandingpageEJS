<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/blog.css">
    <title>Blog | Quilar</title>
    </head>
<body>
    <header class="visible">
    <%- include('../partials/header'); %>
    </header>
    <main>
        <div class="row">
            <div class="leftcolumn">
                <div class="cards">

                    <% if(blogs){ %>
                        <% blogs.forEach(blog => { %>        
                            <div class="card" id=<%= blog.id %>>
                                <div class="card-header">
                                    <img src=<%= `/content/blogs/${blog.id}/banner.png` %> class="fakeimg"/>
                                </div>
                                <div class="card-body">
                                    <h2><%= blog.title%></h2>
                                    <p><%= blog.summary %></p>
                                    <a href=<%=`/blog/${blog.id}`%>> Zum Beitrag > </a>
                                </div>
                            </div>
                            <% }); %>
                            <% } %>
                </div>
            </div>
          </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>


</body>
</html>