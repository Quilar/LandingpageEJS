<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/blog.css">
    <title><%= blog.title %> | Quilar</title>
    <meta name="description" content="<%= blog.summary %>">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article">
    <meta property="og:title" content="<%= blog.title %>">
    <meta property="og:description" content="<%= blog.summary %>">
    <meta property="og:image" content="<%= blog.imagePath %>">
    </head>
<body>
    <header class="visible">
    <%- include('../partials/header'); %>
    </header>
    <main class="blogs">
        <div class="row">
            <div class="leftcolumn">
                <div class="card">
                    <div><%- blog.content %></div>
                </div>
            </div>
            <div class="rightcolumn">
              <div class="card">
                <h3>Mehr BeitrÃ¤ge</h3>
                <% if(moreBlogs.length > 0){ %>
                  <% moreBlogs.forEach(more => { %>
                    <div>
                      <p><%= more.title %></p>
                      <img src=<%= more.imagePath %> alt=<%= more.title %> />
                      <a href=<%=`/blog/${more.id}`%>> Lesen </a>
                    </div><br>
                  
                <%})%> 
                <% } %>
              </div>

              <div class="card follow-us">
                <h3>Folge uns auf</h3>
                <div class="social-links">
                    <a href="https://www.youtube.com/@quilar-de" target="_blank">
                        <img src="/content/footer/youtube.svg" alt="YouTube">
                        <p>YouTube</p>
                    </a>
                    <a href="https://www.linkedin.com/company/quilar/" target="_blank">
                        <img src="/content/footer/linkedin.svg" alt="YouTube">
                        <p>LinkedIn</p>
                    </a>
                    <a href="https://www.instagram.com/quilar.de/" target="_blank">
                        <img src="/content/footer/instagram.svg" alt="Instagram">
                        <p>Instagram</p>
                    </a>
                </div>
            </div>
            </div>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>


</body>
</html>